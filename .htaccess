<IfModule mod_expires.c>
	ExpiresActive On
	ExpiresDefault "access plus 5 seconds"
	ExpiresByType image/x-icon "access plus 3600 seconds"
	ExpiresByType image/jpeg "access plus 3600 seconds"
	ExpiresByType image/bmp "access plus 3600 seconds"
	ExpiresByType image/png "access plus 3600 seconds"
	ExpiresByType image/gif "access plus 3600 seconds"
	ExpiresByType application/x-shockwave-flash "access plus 1 hours"
	ExpiresByType text/css "access plus 0 seconds"
	ExpiresByType text/javascript "access plus 0 seconds"
	ExpiresByType application/javascript "access plus 0 seconds"
	ExpiresByType application/x-javascript "access plus 0 seconds"
	ExpiresByType application/json "access plus 0 seconds"
	ExpiresByType text/html "access plus 0 seconds"
	ExpiresByType application/xhtml+xml "access plus 0 seconds"
	ExpiresByType application/x-font-ttf "access plus 1 years"
</IfModule>
