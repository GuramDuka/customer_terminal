AddDefaultCharset UTF-8
AddCharset UTF-8 .html
AddCharset UTF-8 .css
AddCharset UTF-8 .js

<IfModule php7_module>
	php_value enable_post_data_reading 0
	php_value memory_limit 2000M
	php_value post_max_size 1999M
	php_value upload_max_filesize 1999M
	php_value max_execution_time 1200
	php_value max_input_time 1200
	php_value default_socket_timeout 1200
	php_value zlib.output_compression off
	php_value zend.enable_gc 0
</IfModule>

Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Credentials true
Header set Access-Control-Allow-Methods GET,POST

# Переадресация на безопасное https соединения
#RewriteEngine On
#RewriteCond %{HTTPS} !on
#RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}

# compress text, html, javascript, css, xml, json:
<IfModule mod_deflate.c>
    #AddOutputFilterByType DEFLATE text/plain
    #AddOutputFilterByType DEFLATE text/html
    #AddOutputFilterByType DEFLATE text/xml
    #AddOutputFilterByType DEFLATE text/css
    #AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/json
    #AddOutputFilterByType DEFLATE application/xml
    #AddOutputFilterByType DEFLATE application/xhtml+xml
    #AddOutputFilterByType DEFLATE application/rss+xml
    #AddOutputFilterByType DEFLATE application/javascript
    #AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    #AddOutputFilterByType DEFLATE application/x-font-ttf
    #AddOutputFilterByType DEFLATE image/x-icon
    #AddOutputFilterByType DEFLATE image/png
    #AddOutputFilterByType DEFLATE image/jpeg
    #AddOutputFilterByType DEFLATE image/svg+xml
    <IfModule mod_setenvif.c>
		BrowserMatch ^Mozilla/4 gzip-only-text/html
		BrowserMatch ^Mozilla/4\.0[678] no-gzip
		BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    </IfModule>
</IfModule>

<IfModule mod_expires.c>
	ExpiresActive On
	ExpiresDefault "modification plus 5 seconds"
	ExpiresByType image/x-icon "modification plus 1 years"
	ExpiresByType image/jpeg "modification plus 30 seconds"
	ExpiresByType image/bmp "modification plus 30 seconds"
	ExpiresByType image/png "modification plus 30 seconds"
	ExpiresByType image/gif "modification plus 30 seconds"
	ExpiresByType image/svg+xml "modification plus 30 seconds"
	ExpiresByType text/javascript "modification plus 1 years"
	ExpiresByType text/html "modification plus 1 years"
	ExpiresByType text/css "modification plus 1 years"
	ExpiresByType text/json "modification plus 0 seconds"
	ExpiresByType application/x-shockwave-flash "modification plus 1 hours"
	ExpiresByType application/x-javascript "modification plus 1 years"
	ExpiresByType application/javascript "modification plus 1 years"
	ExpiresByType application/x-font-ttf "modification plus 1 years"
	ExpiresByType application/xhtml+xml "modification plus 1 years"
	ExpiresByType application/json "modification plus 0 seconds"
</IfModule>
